{
  "manifest_version": 2,
  "name": "DeepSeek Assistant",
  "version": "1.0",
  "description": "A browser extension to call DeepSeek API",
  "permissions": ["activeTab", "https://api.deepseek.com/"],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  },
  "icons": {
    "16": "icons/icon16.ico",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.ico"
  }
}
